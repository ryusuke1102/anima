<%=provide(:title,"posts-show")%>
<div class="post-form"> 
<%=image_tag "post-form.jpg", class:"post-form"%>
 <div class="bg-mask">
  <div class="edit-index">
　　　<div class="posts-title">
        <h1 style="margin-top: 0; padding-top: 0;"><%= @post.content %></h1>
        <h4 class="post-user-name",style="margin-top: 0;"><img src="<%="/users_images/#{@user.image_name}"%>"><%= link_to(@user.name, "/users/#{@user.id}/edit") %></h4>
   

      <div class="posts-image">
        <img src="<%="/posts_images/#{@post.id}.jpg"%>">
      </div>
    <div class="post-content">

      <div class="like">
            <% if Like.find_by(user_id: @current_user.id, post_id: @post.id)%>
            <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do%>
            <i class="fas fa-cat like-btn-unlike"></i>        
            <% end %>
            <%else%>
            <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do%>
            <i class="fas fa-cat like-btn"></i>        
              <% end %>
            <%end%>
            <%=@like_count%>
  
          <%if @post.user_id == @current_user.id%>
            <%= link_to ("/posts/#{@post.id}/edit") do %>
              <i class="fas fa-edit"></i>
            <%end%>
            <%= link_to("/posts/#{@post.id}/destroy", {method: "post"}) do %>
              <i class="fas fa-trash"></i>
            <%end%>
          <%end%>
      </div>
      <div class="post-detail">
       <P><%= @post.detail %></p>
   
      </div>
    </div>

    

   </div>
  </div>
 </div>
 </div>




